<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProgramDetailDisplayActvitity">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/program_video_exoPlayer_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_exoplayer_height">

    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailTopicNameDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/colorPrimaryDark" />

            <ToggleButton
                android:id="@+id/detail_topic_toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/check"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>